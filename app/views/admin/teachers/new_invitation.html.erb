<h2>Send invitation</h2>
 
<%= form_for @teacher, :url => send_invitation_admin_teachers_path do |f| %>
   
   <table style='width: 50%'>
   	<tr>
   		<td><%= f.label :name %></td>
   		<td><%= f.text_field :name %></td>
   	</tr>
   	<tr>
   		<td><%= f.label :email %></td>
   		<td><%= f.text_field :email, :required => true %></td>
   	</tr>
   </table>
   
  <%= f.submit  "Send an Invitation" %>
<% end %>